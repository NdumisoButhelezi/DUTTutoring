<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/tutorProfileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:src="@drawable/default_profile_image" />

    <!-- Tutor Name -->
    <TextView
        android:id="@+id/tutorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Tutor Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Tutor Modules -->
    <TextView
        android:id="@+id/tutorModulesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Modules: Example Module"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Tutor Status -->
    <TextView
        android:id="@+id/tutorStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Status: Available"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />
</LinearLayout>